<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".McDonalds">

    <ImageView
        android:id="@+id/imageViewMcDonald2"
        android:layout_width="257dp"
        android:layout_height="215dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/mcdonaldmenu" />

    <ImageView
        android:id="@+id/imageViewMcDonald3"
        android:layout_width="252dp"
        android:layout_height="220dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMcDonald2"
        app:srcCompat="@drawable/mcdonaldmenu1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="53dp"
        android:text="Delicious"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:fontFamily="cursive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>